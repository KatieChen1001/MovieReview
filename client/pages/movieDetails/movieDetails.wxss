page{
  background-color: #ededed;
}

.movie-detail-container{
  width:650rpx;
  margin: 0 auto;
  margin-top:100rpx;
  margin-bottom:100rpx;
  background-color: white;
  padding-top:80rpx;
  padding-bottom: 80rpx;
}

.movie-detail-img{
  text-align: center;
}

.movie-detail-img image{
  width: 270rpx;
  height: 400rpx;
}

.movie-title{
  font-size: 40rpx;
  font-weight: 600;
  text-align: center;
  padding: 30rpx 0rpx 30rpx 0rpx;
}

.movie-description{
  width:75%;
  margin: 0 auto;
  font-size: 28rpx;
}

.movie-btn-container{
  margin: 0 auto;
  margin-top:100rpx;
  width:75%;
  height: 70rpx;
  display: flex;
}

.darken{
  background: rgba(0,0, 0, 0.3)
}

.darkenedImg{
  opacity: 0.3;
}

.addReview-container{
  width:100%;
  position:fixed;
  bottom:0rpx;
}

.movie-btn{
  font-size: 28rpx;
  display: block;
  box-sizing: border-box;
  text-align: center;
  text-decoration: none;
  line-height: 2.55555;
  border-radius:10rpx;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  color:black;
  background-color: #f8f8f8;
  width: 650rpx;
  padding: 10rpx 0;
}

.border-bottom{
  border-bottom: 3px solid #adadad;
}

.other-navigator-hover{
  background-color: #adadad;
}


