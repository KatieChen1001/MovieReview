<view class="review-card" wx:if="{{commentList.length > 0}}" wx:for="{{commentList}}" bindtap="viewReviewDetail" wx:key="{{item.id}}" data-reviewid="{{item.id}}">
  <view class='reviewer-info'>
    <image src='{{item.useravatar}}' class='reviewer-avatar'></image>
    <text class='reviewer-name'>{{item.username}}</text>
  </view>
  <view class='review-content' wx:if="{{item.type == 'text'}}">{{item.content}}</view>
  <audio class='review-content audio' wx:if="{{item.type == 'audio'}}" data-src="{{item.content}}" catchtap='playRecording'>this is audio</audio>
</view>

<view wx:if="{{commentList.length == 0}}" class="review-card empty">
  <text class='review-content'>Be the first to review this movie!</text>
</view>

