.movie-detail-container{
  width:100%;
  margin: 0 auto;
  background:rgba(0,0,0,0.3);
  padding-top:80rpx;
  padding-bottom: 80rpx;
}

.movie-detail-img{
  text-align: center;
}

.movie-detail-img image{
  width: 270rpx;
  height: 400rpx;
  opacity: 0.5;
}

.movie-title{
  font-size: 40rpx;
  font-weight: 600;
  text-align: center;
  padding: 30rpx 0rpx 30rpx 0rpx;
}
.movie-text{
  width:650rpx;
  margin:0 auto;
  
}

.movie-description{
  width:75%;
  margin: 0 auto;
  font-size: 28rpx;
}

.addReview-container{
  width:100%;
  position:fixed;
  bottom:0rpx;
}

navigator.movie-btn{
  font-size: 28rpx;
  /* width: 200rpx; */
  position:relative;
  display: block;
  margin-left: auto;
  margin-right:auto;
  padding-left: 28rpx;
  padding-right: 28rpx;
  box-sizing: border-box;
  text-align: center;
  text-decoration: none;
  line-height: 2.55555;
  border-radius:10rpx;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  color:black;
  background-color: #f8f8f8;
}

.border-bottom{
  border-bottom: 3px solid #adadad;
}

.other-navigator-hover{
  background-color: #adadad;
}

